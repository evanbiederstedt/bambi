#!/bin/sh

export DIR=$(dirname "$(readlink -f "$0")");

export CFLAGS=" -fPIC";
export CPPFLAGS=" -fPIC";
export BAMDB="$DIR/src/bamdb";

export ZLIB_LOC="$DIR/src/zlib";                        ### libz.so, libz.a, libz.so.1; zconf.h, zlib.h
export CK_LOC="$DIR/src/ck";                            ### libck.so, libck.a, include/*.h
export LMDB_LOC="$DIR/src/lmdb/libraries/liblmdb";      ### liblmdb.so, liblmdb.a, lmdb.h
export HTSLIB_LOC="$DIR/src/htslib";                    ### libhts.a, libhts.so, libhts.so.2

echo $DIR
echo $DIR
echo $DIR

cd $ZLIB_LOC
mkdir build;
cd build;
cmake ..;
make

cd $CK_LOC    
./configure;
make;


cd $HTSLIB_LOC
make; 


cd $BAMDB
mkdir build;
cd build;
cmake ..;
make
